# Environment variables for Wagtail Tutorial
# Copy this file to .env and modify the values as needed

# Django Secret Key (generate a new one for production)
SECRET_KEY=your-secret-key-here

# Database settings (if using PostgreSQL instead of SQLite)
# DATABASE_URL=postgres://user:password@localhost:5432/wagtail_tutorial

# Email settings (for production)
# EMAIL_HOST=smtp.example.com
# EMAIL_PORT=587
# EMAIL_HOST_USER=your-email@example.com
# EMAIL_HOST_PASSWORD=your-email-password
# EMAIL_USE_TLS=True

# Debug mode (set to False in production)
DEBUG=True

# Allowed hosts (comma-separated list for production)
ALLOWED_HOSTS=localhost,127.0.0.1
